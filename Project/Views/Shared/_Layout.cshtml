<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Project.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Project</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Management">Management</a>
                            </li>
                            <li class="nav-item">
                                <form id="logoutForm" asp-area="" asp-controller="Auth" asp-action="Logout" method="post" class="form-inline">
                                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Login">Login</a>
                            </li>
                           
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container container-footer">
            <div class="row">
                <div class="col-2">
                    <br />
                    <img class="img-fluid" src="https://placedog.net/400" alt="logo"/></div>
                <div class="col-1"></div>
                <div class="col-2">
                    <h5 class="fw-bold">Download</h5>
                    <ul class="list-unstyled text-small">
                                          
                        <li><a class="" href="#">Android app</a></li>
                        <li><a class="" href="#">Apple app</a></li>
                        <li><a class="" href="#">Desktop app</a></li>
                    </ul>
                </div>
                <div class="col-2">
                    <h5 class=fw-bold>Chi siamo?</h5>
                    <ul class="list-unstyled text-small">
                        <li><a class="" href="#">Compagnia</a></li>
                        <li><a class="" href="#">Contatti</a></li>
                        <li><a class="" href="#">Email</a></li>
                        <li><a class="" href="#">Privacy</a></li>
                    </ul>
                </div>
                <div class="col-2">
                    <h5 class=fw-bold>Servizi</h5>
                    <ul class="list-unstyled text-small">
                        <li><a class="" href="#">Prenota</a></li>
                        <li><a class="" href="#">Affitta una camera</a></li>            
                    </ul>
                </div>
                <div class="col-2">
                    <h5 class=fw-bold>Cosa vuoi vedere?</h5>
                    <ul class="list-unstyled text-small">
                        <li><a class="" href="#">Home</a></li>
                        <li><a class="" href="#">Offerte</a></li>
                        <li><a class="" href="#">Registrati</a></li>
                        <li><a class="" href="#">Accedi</a></li>
                    </ul>
                </div>
            </div>      
               <div class="mb-2">
                    <div class="text-center fw-bold anno">© 
                        @DateTime.Now.Year - PLACEHOLDER</div>
               </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
